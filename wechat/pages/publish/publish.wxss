form{
  width: 750rpx;
}
.header{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}
.header-title{
  width: 100%;
  height: 50rpx;
  display: table-cell;
  text-align: center;
  font-weight: bold;
}
.header-address{
  width: 100%;
  height: 100rpx;
  display: flex;
  font-size: 48rpx;
  align-items: center;
  justify-content: center;
}
.header-address input{
  display: table-cell;
  text-align: center;
}
.header-detail{
  width: 100%;
  height: 50rpx;
  display: table-cell;
  text-align: center;
}
.body{
  width: 100%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #f8fbf8;
  background-color: white;
  align-items: center
}
.body-title{
  width: 90%;
  height: 100rpx;
  font-size: 40rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f8fbf8;
  line-height: 100rpx;
}
.body-content{
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: center;
}
.body-content textarea{
  width: 90%;
}
.foot{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
  border: 1px solid #808080
}
.foot-money{
  width: 50%;
  height: 100rpx;
  display: table-cell;
  line-height: 100rpx;
  text-align: center;
}
.foot-button{
  width: 50%;
  height: 100rpx;
  display: flex
}
.button{
  background-color: white;
  width: 100%;
  height: 100rx;
  
}