<view class='container'>
  <form bindsubmit='FormSubmit'>
    <view class='header'>
      <view class='header-title'>订单配送至</view>
      <view class='header-address'>
        <input name='address' value='{{form.address}}'></input>
      </view>
      <view class='header-detail'>
        <input name='phone' value='{{form.phone}}'></input>
      </view>
    </view>
    <view class='body'>
      <view class='body-title'>我的要求</view>
      <view class='body-content'>
        <textarea name='remarks' value='{{form.remarks}}'></textarea>
      </view>
    </view>
    <view class='foot'>
      <view class='foot-money'>
        <view class='foot-money-text'>感谢费：</view>
        <view class='foot-money-input'>
          <input name='amount' placeholder='输入金额' value="{{form.amount}}"></input>
        </view>
        <view class='foot-money-text1'>元</view>
      </view>
      <view class='foot-button'>
        <button form-type='submit' class='button'>确认下单</button>
      </view>
    </view>
  </form>
</view>