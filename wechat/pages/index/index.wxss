
.form{
  width: 96%;
  
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border: 1px solid #f8fbf8;
}

.header{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f8fbf8;
}
.header-avatarUrl{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
}
.header-avatarUrl image{
  width: 75%;
  height: 75%
}
.header-detail{
  width: 550rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  
  
}
.header-detail-name{
  width: 100%;
  height: 50rpx;
  display: flex;
  color: #ff461f;
}
.header-detail-address{
   width: 100%;
  height: 50rpx;
  display: flex;
  color: #808080;
}
.body{
  width: 100%;
  
  display: flex;
  margin-left: 200rpx;
  
}
.foot{
  width: 100%;
  height: 75rpx;
  background-color: white;
  border-bottom: 1rpx solid #c2ccd0;
  display: flex;
  flex-direction: row
}
.foot-money{
  width: 200rpx;
  height: 75rpx;
  margin-left: 100rpx;
  display: flex;
  line-height: 75rpx;
  color: #ff461f;
}
.foot-money-text{
  width: 200rpx;
  height: 75rpx;
  line-height: 75rpx;
  color: #ff461f;
   margin-right: 20rpx;
}

.foot-button{
  width: 350rpx;
  height: 75rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center
}

.button button{
   width: 160rpx;
  height: 50rpx;
  margin-right: 20rpx;
  border-radius: 0;
  background-color: white;
  border: 1rpx solid black;
  font-size: 24rpx;
  line-height: 50rpx
}
.button button::after{
  border: none
}
