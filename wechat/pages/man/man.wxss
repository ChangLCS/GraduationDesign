.info{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-bottom: 20rpx;
  align-items: center;
  justify-content: center
}
.info-avatarUrl{
  width: 150rpx;
  height: 150rpx;
  

}
.info-avatarUrl image{
  width: 100%;
  height: 100%;
}
.info-name{
  width: 200rpx;
  height: 50rpx;
  display: table-cell;
  text-align: center;

}
.info-button{
  width: 290rpx;
  height: 100rpx;
}
.info-button button{
  width: 100%;
  height: 100%;
  background-color: white;
  border: 2rpx solid black;
  border-radius: 0;
}
.info-button button::after{
  border: none
}
.address{
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;

}
.address-icon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-right: 20rpx; 
}
.address-icon image{
  width: 100%;
  height: 100%;
}

.address-text{
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;

}
button{
  width: 250rpx;
  height: 100rpx;
}