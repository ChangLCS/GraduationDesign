<view class='container'>
  <view class='add'>
    <view class='add-icon'>
      <image src='../../../image/6.png'></image>
    </view>
    <view class='add-text' bindtap='addAddress'>新增地址</view>
  </view>
 <block wx:for='{{list}}' wx:key='key' data-index="{{index}}" > 
    <view class='list'>
    <view class='list-address'>
      <view class='list-address-dizhi'>{{item.address}}</view>
      <view class='list-address-name'>{{item.tel}}</view>
    </view>
    <view class='list-icon'>
      <image data-index='{{index}}'   bindtap='changeAddress'  src='../../../image/8.png'></image>
    </view>
  </view>
   
 
 </block>
</view>